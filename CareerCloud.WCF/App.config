  <system.serviceModel>
    <services>
      <service name="CareerCloud.WCF.Applicant">
        <endpoint address="basic" binding="basicHttpBinding" bindingConfiguration="" name="ApplicantEndpoint" bindingName="ApplicantEndpoint" contract="CareerCloud.WCF.IApplicant" />
        <endpoint address="mex" binding="mexHttpBinding" name="ApplicantMetaData" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/CareerCloud.WCF/Applicant/" />
          </baseAddresses>
        </host>
      </service>
      <service name="CareerCloud.WCF.Company">
        <endpoint address="basic" binding="basicHttpBinding" bindingConfiguration="" name="CompanyEndpoint" bindingName="CompanyEndpoint" contract="CareerCloud.WCF.ICompany" />
        <endpoint address="mex" binding="mexHttpBinding" name="CompanyMetaData" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8734/Design_Time_Addresses/CareerCloud.WCF/Company/" />
          </baseAddresses>
        </host>
      </service>
      <service name="CareerCloud.WCF.Security">
        <endpoint address="basic" binding="basicHttpBinding" bindingConfiguration="" name="SecurityEndpoint" bindingName="SecurityEndpoint" contract="CareerCloud.WCF.ISecurity" />
        <endpoint address="mex" binding="mexHttpBinding" name="SecurityMetaData" contract="IMetadataExchange" />
